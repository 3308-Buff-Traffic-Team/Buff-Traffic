                              <% if (room.status == "favorite") { %>
                                <div class="col-sm-4">
                                  <%= generateCard(room.name, room.status, room.avg_traffic); %>
                                </div>
                        <% } else { %>
                        <div class="col-sm-4">
                            <%= generateCard(room.name, room.status, room.avg_traffic); %>
                        </div>
                        <% } }); %>
                                      <% } %>
                    </div>
                </div>
            </div>
            <div class="container">
                <h1>hello world!</h1> 
            </div>


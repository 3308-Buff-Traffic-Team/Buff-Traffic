        <head>
            <style>
                .card {
                    position: relative;
                    bottom: -100%;
                    animation: slide-up 0.75s ease-out forwards;
                }

                .circle-wrap {
                    position: relative;
                    bottom: -100%;
                    animation: slide-up 1s ease-out forwards;
                }

                @keyframes slide-up {
                    to {
                        bottom: 0;
                    }
                }

                .star-icon {
                    position: absolute;
                    top: 0;
                    right: 0;
                    padding: 10px;
                    cursor: pointer;
                }

                .star-icon i {
                    color: 'rgb(33, 37, 41)';
                    text-shadow: 0 0 3px #ffffff;
                }

                .circle-wrap {
                    margin: 20px auto;
                    width: 10vh;
                    height: 10vh;
                    background: #fefcff;
                    border-radius: 50%;
                    border: 1px solid #cdcbd0;
                }

                .circle-wrap .circle .mask,
                .circle-wrap .circle .fill {
                    width: 10vh;
                    height: 10vh;
                    position: absolute;
                    border-radius: 50%;
                }

                .circle-wrap .circle .mask {
                    clip: rect(0px, 10vh, 10vh, 5vh);
                }

                .inside-circle {
                    /* other styles */
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                .circle-wrap .inside-circle {
                    width: 8vh;
                    height: 8vh;
                    border-radius: 50%;
                    background: #d2eaf1;
                    line-height: 120px;
                    text-align: center;
                    margin-top: 1vh;
                    margin-left: 1vh;
                    color: #1e51dc;
                    position: absolute;
                    z-index: 100;
                    font-weight: 700;
                    font-size: 1em;
                }

                /* color animation */

                /* 3rd progress bar */
                .mask .fill {
                    clip: rect(0px, 5vh, 10vh, 0px);
                    background-color: #227ded;
                }

                /* .mask.full,
                .circle .fill {
                    animation: fill ease-in-out 3s;
                    transform: rotate(180deg);
                } */

                @keyframes fill {
                    0% {
                        transform: rotate(0deg);
                    }

                    100% {
                        transform: rotate(135deg);
                    }
                }
            </style>
            <link rel="stylesheet" href="../resources/css/style.css">

            <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">

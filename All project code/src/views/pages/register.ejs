<%- include ('../partials/header') %>
<%- include ('../partials/navbar') %>

<html>

<head>
  <link rel="stylesheet" href="../resources/css/style.css">
  
  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css"> -->
  
  <title>Register Account</title>
</head>

<body>
    <% if (locals.message) { %>
        <div class="container" style="width: 425px; padding: 10px;">
            <div class="alert alert-<%- locals.error ? 'danger' : 'success' %>" role="alert" style="text-align: center;">
                <%= message %>
            </div>
        </div>
    <% } %>
    <div class="main">
        <p class="sign" align="center">Create Account</p>
        <form action="/register" method ="POST">
            <input class="un " type="text" align="center" name="email" placeholder="Username">
            <input class="pass" type="password" align="center" name="password" placeholder="Password">
            <button type="submit" class="submit" align="center">Register</button>
        </form>        
    </div>
</body>
</html>

<%- include ('../partials/footer') %>